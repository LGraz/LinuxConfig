[
    ///////////////////////////////
    // Custom
    ///////////////////////////////
    // { // git: stage commit push
    //     "key": "alt+g",
    //     "command": "workbench.action.terminal.sendSequence",
    //     "args": {
    //         "text": "git add . ; git commit -m '.' ; git push origin \n"
    //     }
