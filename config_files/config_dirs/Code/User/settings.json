    "explorer.confirmDelete": false,
    "latex-workshop.view.pdf.viewer": "tab",
    "explorer.confirmDragAndDrop": false,
    "git.confirmSync": false,
    "editor.largeFileOptimizations": false,
    "jupyter.askForKernelRestart": false,
    "interactiveWindow.collapseCellInputCode": "never",
    "[markdown, latex, tex]": {
        "editor.formatOnSave": true,
        "editor.wordWrap": "on",
        "editor.renderWhitespace": "all"
    },
    // "workbench.colorCustomizations": {
    //     // highlight tab
    //     "tab.activeBorder": "#f01bff",
    //     "tab.unfocusedActiveBorder": "#6e0775"
    // },
    "window.menu^Visibility": "hidden",
    "latex-workshop.message.error.show": false,
    "git.autofetch": true,
    "workbench.editorAssociations": {
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "editor.cursorSurroundingLines": 3,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.views.branches.branches.layout": "list",
    "workbench.panel.defaultLocation": "right",
    "editor.minimap.enabled": false,
    // "workbench.iconTheme": "sweet-vscode-icons",
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.scrollback": 2000,
    "workbench.startupEditor": "none",
    "git.enableSmartCommit": true, // bar with directory
    // "debug.console.fontFamily": "Cascadia Code Light",
    "debug.console.fontSize": 16,
    "debug.console.lineHeight": 22,
    "markdown.preview.fontSize": 16,
        "r.session.viewers.viewColumn": {
            "viewer": "Two",
            "view": "Two"
        },
    "latex-workshop.view.pdf.color.dark.backgroundColor": "#000000",
    // "terminal.integrated.defaultProfile.linux": "zsh",
    "notebook.output.textLineLimit": 50,
    // Language specific settings
    "[latex]": {
        "editor.wordWrap": "on"
    },
    "[tex]": {
        "editor.wordWrap": "on"
    },
    "[markdown]": {
        "editor.wordWrap": "on"
    },
    "[r]": {
        "editor.tabSize": 2,
        "editor.formatOnPaste": false,
        "editor.wordSeparators": "`~!@#%$^&*()-=+[{]}\\|;:'\",<>/?"
    },
    "[rmd]": {
        "editor.tabSize": 2,
        "editor.formatOnPaste": false,
        "editor.wordSeparators": "`~!@#%$^&*()-=+[{]}\\|;:'\",<>/?"
    },
    "[rsweave]": {
        "editor.tabSize": 2,
        "editor.formatOnPaste": false,
        "editor.wordWrap": "on"
    },
    "editor.acceptSuggestionOnEnter": "off",
    "editor.quickSuggestionsDelay": 50,
    "editor.suggest.localityBonus": true,
    "files.insertFinalNewline": true,
    "editor.lineDecorationsWidth": 0,
    "[python]": {
        "editor.tabSize": 4,
        "editor.formatOnPaste": false,
        "editor.formatOnType": true
    },
    "path-intellisense.autoTriggerNextSuggestion": true,
    "path-intellisense.showHiddenFiles": true,
    "path-intellisense.mappings": {
        "./": "${workspaceRoot}",
    },
    "path-intellisense.autoSlashAfterDirectory": true,
    "terminal.integrated.fontFamily": "monospace",
    "extensions.ignoreRecommendations": true,
    "vscode-office.openOutline": false,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "latex-workshop.view.pdf.color.light.backgroundColor": "#000000",
    "r.plot.useHttpgd": true,
    "window.customMenuBarAltFocus": false,
    // "window.enableMenuBarMnemonics": true
    "window.enableMenuBarMnemonics": false,
    // "window.menuBarVisibility": "toggle",
    "window.menuBarVisibility": "hidden",
    "terminal.integrated.commandsToSkipShell": [
        // Ensure the toggle sidebar visibility keybinding skips the shell
        "workbench.action.toggleSidebarVisibility"
    ],
    "git.openRepositoryInParentFolders": "always",
    "workbench.colorTheme": "LukasLeight",
    "application.shellEnvironmentResolutionTimeout": 1,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "macros": {
        "r_get_str": [
            "editor.action.addSelectionToNextFindMatch",
            {
                "command": "workbench.action.terminal.sendSequence",
                "args": {
                    "text": "str(${selectedText})\u000D"
                }
            },
            "cancelSelection"
        ],
        "r_get_summary": [
            "editor.action.addSelectionToNextFindMatch",
            {
                "command": "workbench.action.terminal.sendSequence",
                "args": {
                    "text": "summary(${selectedText})\u000D"
                }
            },
            "cancelSelection"
        ],
        "r_get_methods": [
            "editor.action.addSelectionToNextFindMatch",
            {
                "command": "workbench.action.terminal.sendSequence",
                "args": {
                    "text": "if (grepl(paste0('^\\\\s*', r_obj_regex, '\\\\s*\\\\(\\\\s*', r_obj_regex), '${selectedText}')) what_method_is_called('${selectedText}') else if(is.function(get('${selectedText}'))) methods('${selectedText}') else methods(class=class(get('${selectedText}')))\u000D"
                }
            },
            "cancelSelection"
        ],
        "r_get_class": [
            "editor.action.addSelectionToNextFindMatch",
            {
                "command": "workbench.action.terminal.sendSequence",
                "args": {
                    "text": "class(${selectedText})\u000D"
                }
            },
            "cancelSelection"
        ],
        "r_view": [
            "editor.action.addSelectionToNextFindMatch",
            {
                "command": "workbench.action.terminal.sendSequence",
                "args": {
                    "text": "utils::View(${selectedText})\u000D"
                }
            },
            "cancelSelection"
        ],
    },
    "notebook.output.lineHeight": 1.1,
    "notebook.output.fontSize": 16,
    "aws.telemetry": false,
    "r.rterm.linux": "/scratch/users/lgraz/.local/bin/radian",
    "r.bracketedPaste": true,
    "breadcrumbs.filePath": "off"
}
